<Window x:Class="CSConfluenceAutomationFWWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSConfluenceAutomationFWWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="350">
    <Grid>
        <Label Content="Parent Page Title:" Margin="25 0 0 200" Height="25"/>
        <TextBox x:Name="uiParentPageName" Width="150" Height="25" Margin="150 0 0 200"/>
        <Label Content="Page Title:" Margin="25 0 0 125" Height="25"/>
        <TextBox x:Name="uiPageName" Width="150" Height="25" Margin="150 0 0 125"/>
        <Label Content="Space Key::" Margin="25 0 0 50" Height="25"/>
        <TextBox x:Name="uiSpaceKey" Width="150" Height="25" Margin="150 0 0 50"/>
        <Button Content="Upload to Conflu" Click="UploadClick" Height="50" Width="100" Margin="0 150 110 0"/>
        <Button Content="Upload image" Click="UploadImage" Height="50" Width="100" Margin="110 150 0 0"/>
    </Grid>
</Window>
